<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Style pour le titre -->
    <Style x:Key="SignUpTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="#007BFF" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <!-- Style pour les labels -->
    <Style x:Key="SignUpLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="#333333" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <!-- Style pour les champs d'entrée -->
    <Style x:Key="SignUpEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="#FFFFFF" />
        <Setter Property="TextColor" Value="#000000" />
        <Setter Property="PlaceholderColor" Value="#AAAAAA" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <!-- Style pour le bouton -->
    <Style x:Key="SignUpButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#007BFF" />
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <!-- Style pour le lien -->
    <Style x:Key="SignUpLinkStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#007BFF" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextDecorations" Value="Underline" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

</ResourceDictionary>
