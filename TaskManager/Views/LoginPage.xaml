<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TaskManager.Views.LoginPage"
    Title="Connexion">

    <VerticalStackLayout Padding="30" Spacing="20">
        <!-- Champ Email -->
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />

        <!-- Champ Mot de passe -->
        <Entry Placeholder="Mot de passe" IsPassword="True" Text="{Binding Password}" />

        <!-- Bouton Se connecter -->
        <Button Text="Se connecter" Command="{Binding LoginCommand}" />

        <!-- Lien vers la page de création de compte -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Pas encore de compte ?" />
            <Label Text="Créer un compte"
                   TextColor="#007BFF"
                   FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSignUpCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
