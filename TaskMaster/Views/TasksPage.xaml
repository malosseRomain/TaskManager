<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.Views.TasksPage"
             Title="Mes Tâches">
    
    <Grid RowDefinitions="Auto, *">
        <!-- En-tête avec bouton d'ajout -->
        <HorizontalStackLayout Grid.Row="0" 
                             Margin="10"
                             Spacing="10">
            <Button Text="Nouvelle Tâche"
                    Clicked="OnNewTaskClicked"
                    HorizontalOptions="Start"/>
            
            <SearchBar Placeholder="Rechercher..."
                      WidthRequest="200"
                      HorizontalOptions="End"/>
        </HorizontalStackLayout>

        <!-- Liste des tâches -->
        <CollectionView Grid.Row="1"
                      ItemsSource="{Binding Tasks}"
                      SelectionMode="Single"
                      SelectionChanged="OnTaskSelected">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Spacing="10">
                    <Label Text="Aucune tâche trouvée"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Cliquez sur 'Nouvelle Tâche' pour en créer une"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="10">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding Titre}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Description}"
                                       FontSize="14"/>
                                <Label Text="{Binding Echeance, StringFormat='Échéance: {0:dd/MM/yyyy}'}"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="{Binding Statut}"
                                   FontSize="12"
                                   HorizontalOptions="End"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage> 